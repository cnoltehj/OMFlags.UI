<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="logs\internal-nlog.txt">

  <!-- Load the ASP.NET Core plugin -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File" name="OMFlags.Web-All"
            fileName="logs/All.log"
            archiveFileName="logs/archive/All.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveDateFormat = "yyyyMMdd"
            archiveEvery="Day"
            archiveAboveSize="100000000"
            maxArchiveFiles="10"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}${onexception:|${event-properties:item=EventId_Id}|${exception:format=ToString}|${callsite}}"/>
    <!-- write logs to file  -->
    <target xsi:type="File" name="OMFlags.Web-Trace"
            fileName="logs/Trace.log"
            archiveFileName="logs/archive/Trace.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveDateFormat = "yyyyMMdd"
            archiveEvery="Day"
            archiveAboveSize="100000000"
            maxArchiveFiles="10"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}${onexception:|${event-properties:item=EventId_Id}|${exception:format=ToString}|${callsite}}"/>
    <!-- write logs to file  -->
    <target xsi:type="File" name="OMFlags.Web-Info"
            fileName="logs/Info.log"
            archiveFileName="logs/archive/Info.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveDateFormat = "yyyyMMdd"
            archiveEvery="Day"
            archiveAboveSize="100000000"
            maxArchiveFiles="30"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}${onexception:|${event-properties:item=EventId_Id}|${exception:format=ToString}|${callsite}}"/>
    <!-- write logs to file  -->
    <target xsi:type="File" name="OMFlags.Web-Error"
            fileName="logs/Error.log"
            archiveFileName="logs/archive/Error.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveDateFormat = "yyyyMMdd"
            archiveEvery="Day"
            archiveAboveSize="100000000"
            maxArchiveFiles="60"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}${onexception:|${event-properties:item=EventId_Id}|${exception:format=ToString}|${callsite}}"/>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="logs.Web-All" />
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxLevel="Info" final="true" />
    <logger name="*" minlevel="Trace" writeTo="OMFlags.Web-Trace" />
    <logger name="*" minlevel="Info" writeTo="OMFlags.Web-Info" />
    <logger name="*" minlevel="Error" writeTo="OMFlags.Web-Error" />
  </rules>
</nlog>